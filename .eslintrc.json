{
  "extends": [
    "airbnb",
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "tsx": "never",
        "ts": "never"
      }
    ],
    "react/require-default-props": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".tsx"
        ]
      }
    ],
    "react/jsx-props-no-spreading": "off",
    "quotes": [
      "error",
      "double"
    ],
    "import/prefer-default-export": "off",
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "react/destructuring-assignment": "off"
  }
}